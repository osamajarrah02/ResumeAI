@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #1f1c2c, #928dab);
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow-x: hidden;
    }

    .register-container {
        background: rgba(255, 255, 255, 0.07);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(9px);
        border-radius: 20px;
        padding: 3rem;
        max-width: 900px;
        width: 100%;
        color: white;
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .form-floating > label {
        color: #ddd;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(173, 216, 230, 0.4);
        background-color: rgba(255,255,255,0.15);
        color: #fff;
    }

    .form-control {
        background-color: rgba(255,255,255,0.1);
        border: none;
        color: #fff;
    }

    .form-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .cool-button {
        background: linear-gradient(135deg, #89f7fe, #66a6ff);
        color: #000;
        border: none;
        transition: all 0.3s ease;
    }

        .cool-button:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(102, 166, 255, 0.5);
        }

    .side-panel {
        flex: 1;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 1rem;
        color: #fff;
    }

        .side-panel h3 {
            font-size: 1.8rem;
        }

        .side-panel p {
            font-size: 1rem;
            opacity: 0.8;
        }

    .form-panel {
        flex: 1;
    }

    a {
        color: #66a6ff;
    }

    @@media (max-width: 768px) {
        .register-container

    {
        flex-direction: column;
    }

    }
</style>

<div class="register-container animate__animated animate__fadeInUp">
    <div class="form-panel">
        <div class="form-title">Create a SkillSet Account</div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PersonFirstName" class="form-control" placeholder="First Name" />
                <label asp-for="Input.PersonFirstName">First Name</label>
                <span asp-validation-for="Input.PersonFirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PersonLastName" class="form-control" placeholder="Last Name" />
                <label asp-for="Input.PersonLastName">Last Name</label>
                <span asp-validation-for="Input.PersonLastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg cool-button">Register</button>

            <p class="mt-3 text-center">
                Already have an account?
                <a asp-page="/Account/Login" asp-area="Identity">Login</a>
            </p>
        </form>
    </div>

    <div class="side-panel">
        <h3>Welcome to SkillSet</h3>
        <p>Start building your professional resume powered by artificial intelligence. It's fast, smart, and free to get started!</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
