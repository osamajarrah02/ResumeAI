<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Modern Navbar - ResumeAI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Layout/Layout.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container px-4">
            <a class="navbar-brand" href="#">SkillSet</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Identity/Account/Login">Creator</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact Us</a></li>
                </ul>
                <div class="dropdown">
                    <a class="d-flex align-items-center text-decoration-none dropdown-toggle profile-container"
                       href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://i.pravatar.cc/42" alt="User Profile Image" class="profile-img" />
                        <div class="profile-info">
                            @{
                                var firstName = User.FindFirst("FirstName")?.Value ?? "Guest";
                                var lastName = User.FindFirst("LastName")?.Value ?? "";
                                var points = User.FindFirst("Points")?.Value ?? "0";
                            }
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="profile-username">@firstName @lastName</span>
                                <span class="profile-points">Spoints: @points</span>
                            }
                            else
                            {
                                <span class="profile-username">Guest</span>
                                <span class="profile-points">Spoints: 0</span>
                            }
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end text-small shadow">
                        <li><a class="dropdown-item" href="/Settings">Settings</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Profile">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm">
                                <button type="submit" class="dropdown-item">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <main role="main" class="pb-3">
            @RenderBody()
    </main>
    <footer class="bg-dark text-light pt-5 pb-4">
        <div class="container">
            <div class="row gy-4">
                <div class="col-12 col-md-4">
                    <h4 class="text-primary fw-bold mb-3">SkillSet AI</h4>
                    <p class="small text-muted">
                        Empower your career with AI-crafted resumes, cover letters, emails, and portfolios.
                    </p>
                    <p class="small text-muted">© 2025 SkillSet AI. All rights reserved.</p>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="text-uppercase fw-bold mb-3">Products</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#resume-builder" class="text-light text-decoration-none footer-link">Resume Builder</a></li>
                        <li><a href="#coverletter" class="text-light text-decoration-none footer-link">Cover Letter</a></li>
                        <li><a href="#email" class="text-light text-decoration-none footer-link">Email Writer</a></li>
                        <li><a href="#portfolio" class="text-light text-decoration-none footer-link">Portfolio Creator</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-2">
                    <h6 class="text-uppercase fw-bold mb-3">Company</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-light text-decoration-none footer-link">About Us</a></li>
                        <li><a href="#" class="text-light text-decoration-none footer-link">Careers</a></li>
                        <li><a href="#" class="text-light text-decoration-none footer-link">Blog</a></li>
                        <li><a href="#" class="text-light text-decoration-none footer-link">Contact</a></li>
                    </ul>
                </div>
                <div class="col-12 col-md-4">
                    <h6 class="text-uppercase fw-bold mb-3">Contact Us</h6>
                    <p class="small mb-2">
                        <i class="fa fa-envelope me-2"></i> support@skillsetai.com
                    </p>
                    <p class="small mb-3">
                        <i class="fa fa-phone me-2"></i> +1 (555) 123-4567
                    </p>

                    <div>
                        <a href="#" class="text-light me-3 fs-5" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-light me-3 fs-5" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light me-3 fs-5" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="text-light fs-5" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener('scroll', () => {
          const navbar = document.querySelector('nav.navbar');
          if(window.scrollY > 15) {
            navbar.classList.add('scrolled');
          } else {
            navbar.classList.remove('scrolled');
          }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>