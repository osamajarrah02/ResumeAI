@model ResumeAI.DTOs.AdminDashboardDTO
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <h2 class="mb-4">Admin Dashboard</h2>
    <div class="row text-white mb-4">
        <div class="col-md-3">
            <div class="card bg-primary shadow rounded text-center p-3 animate__animated animate__fadeInUp">
                <h4>Users</h4>
                <p class="fs-2">@Model.Users.Count</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success shadow rounded text-center p-3 animate__animated animate__fadeInUp">
                <h4>Resumes</h4>
                <p class="fs-2">@Model.ResumesCount</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info shadow rounded text-center p-3 animate__animated animate__fadeInUp">
                <h4>Portfolios</h4>
                <p class="fs-2">@Model.PortfoliosCount</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning shadow rounded text-center p-3 animate__animated animate__fadeInUp">
                <h4>Cover Letters</h4>
                <p class="fs-2">@Model.CoverLettersCount</p>
            </div>
        </div>
    </div>

    <div class="card shadow p-3">
        <h5 class="mb-3">Users Table</h5>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Points</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.PersonFirstName @user.PersonLastName</td>
                        <td>@user.Email</td>
                        <td>@user.Points</td>
                        <td>
                            <form asp-action="BanUser" asp-controller="Admin" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button class="btn btn-danger btn-sm">Ban</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
