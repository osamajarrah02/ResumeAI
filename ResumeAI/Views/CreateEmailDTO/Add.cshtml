@model ResumeAI.DTOs.CreateEmailDTO

@{
    ViewData["Title"] = "Create Email";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CoverLetterCSS/Add.css" />
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
        <div class="row justify-content-center w-100" style="min-height: 90vh;">
            <div class="col-lg-10 shadow-lg rounded-4 bg-white d-flex flex-lg-row flex-column p-0">
                <div class="col-12 col-lg-6 d-flex flex-column align-items-center justify-content-center p-5">
                    <div class="w-100" style="max-width: 500px;">
                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            <div class="form-group mb-3">
                                <label asp-for="EmailType">Email Type</label>
                                <select asp-for="EmailType" class="form-control">
                                    <option value="Professional">Professional</option>
                                    <option value="Personal">Personal</option>
                                    <option value="Semi-professional">Semi-professional</option>
                                </select>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Subject">Subject</label>
                                <input asp-for="Subject" class="form-control" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="RecipientName">Recipient Name</label>
                                <input asp-for="RecipientName" class="form-control" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="SenderName">Sender Name</label>
                                <input asp-for="SenderName" class="form-control" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Tone">Tone</label>
                                <select asp-for="Tone" class="form-control">
                                    <option value="Formal">Formal</option>
                                    <option value="Friendly">Friendly</option>
                                    <option value="Semi-formal">Semi-formal</option>
                                </select>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Purpose">Purpose</label>
                                <textarea asp-for="Purpose" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="AdditionalInfo">Additional Information</label>
                                <textarea asp-for="AdditionalInfo" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-success px-5">Submit</button>
                                <a class="btn btn-outline-dark px-5" asp-controller="Home" asp-action="Creator">Return</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/CoverLetterJS/Add.js"></script>
</body>
</html>
