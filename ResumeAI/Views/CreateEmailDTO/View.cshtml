@model ResumeAI.DTOs.CreateEmailDTO

@{
    ViewData["Title"] = "Your Generated Email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/CreateEmailCSS/View.css">
</head>
<body>
    <div class="container my-5 email-container">
        <div class="email-card mx-auto" style="max-width: 800px;">
            <h2 class="mb-4 text-primary">Your Generated Email</h2>
            <div class="email-meta mb-4">
                <p><strong>Subject:</strong> @Model.Subject</p>
                <p><strong>To:</strong> @Model.RecipientName</p>
                <p><strong>From:</strong> @Model.SenderName</p>
                <p><strong>Type:</strong> @Model.EmailType</p>
                <p><strong>Tone:</strong> @Model.Tone</p>
                <p><strong>Purpose:</strong> @Model.Purpose</p>
            </div>
            <hr />
            <div class="email-body mt-4">
                <p>Dear <strong>@Model.RecipientName</strong>,</p>
                <p>@Model.Purpose</p>
                @if (!string.IsNullOrWhiteSpace(Model.AdditionalInfo))
                {
                    <p>@Model.AdditionalInfo</p>
                }
                <p class="mt-4">Sincerely,</p>
                <p><strong>@Model.SenderName</strong></p>
            </div>
            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-outline-primary btn-back">Back to Create</a>
            </div>
        </div>
    </div>
</body>
</html>
