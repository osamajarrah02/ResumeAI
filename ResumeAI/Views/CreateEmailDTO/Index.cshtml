@model ResumeAI.DTOs.CreateEmailDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Creator for Job Applications</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/CreateEmailCSS/index.css">
</head>
<body>
    <header>
        <div class="container">
            <h1 class="display-4 fw-bold">Professional Email Creator for Jobs</h1>
            <p class="lead">Write the perfect job application email in seconds.</p>
            <a asp-controller="CreateEmailDTO" asp-action="Chat" class="btn btn-light btn-lg shadow mt-3">Start Writing Email</a>
        </div>
    </header>
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Why Choose Our Email Creator?</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-box h-100">
                        <h5>Templates that Work</h5>
                        <p>Choose from proven email templates that get attention and interviews.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box h-100">
                        <h5>Fully Customizable</h5>
                        <p>Edit subject lines, introductions, body, and closings with AI help.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box h-100">
                        <h5>Ready to Send</h5>
                        <p>Copy, export, or connect directly to your email client to send.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">How It Works</h2>
            <div class="row text-center">
                <div class="col-md-4">
                    <h5>1. Enter Your Info</h5>
                    <p>Name, role, and company — we do the rest with AI.</p>
                </div>
                <div class="col-md-4">
                    <h5>2. Pick a Template</h5>
                    <p>Select from formal, creative, or confident email styles.</p>
                </div>
                <div class="col-md-4">
                    <h5>3. Send or Copy</h5>
                    <p>Copy the result or integrate with Gmail, Outlook, and more.</p>
                </div>
            </div>
        </div>
    </section>
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Sample Job Emails</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="example-card">
                        <h6>Subject: Application for Marketing Coordinator Role</h6>
                        <p>Dear Hiring Manager,<br>I’m writing to express my interest in the Marketing Coordinator position at ABC Corp. With a background in digital campaigns and analytics, I am confident I can contribute to your growing team...</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="example-card">
                        <h6>Subject: Developer Role Application – John Smith</h6>
                        <p>Hello,<br>My name is John, and I’m applying for the Front-End Developer position you recently posted. I’ve worked with React, Vue, and Bootstrap to deliver responsive interfaces...</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
