@model ResumeAI.DTOs.ResumeDTO

@{
    ViewData["Title"] = "Modern Resume";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,300,700" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/ResumeCSS/View1.css" />
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="full-name">
                <span class="first-name">@Model.FirstName</span>
                <span class="middle-name">@Model.SecondName</span>
                <span class="last-name">@Model.LastName</span>
            </div>
            <div class="contact-info">
                <span>Email: @Model.Email</span>
                <span class="separator">|</span>
                <span>Phone: @Model.PhoneNumber</span>
            </div>
            <div class="about">
                <span class="position">@Model.JobTitle</span>
                <span class="desc">@Model.Summary</span>
            </div>
        </div>

        <div class="details">

            @if (Model.Experiences?.Any() == true)
            {
                <div class="section">
                    <div class="section__title">Experience</div>
                    <div class="section__list">
                        @foreach (var exp in Model.Experiences)
                        {
                            <div class="section__list-item">
                                <div class="left">
                                    <div class="name">@exp.CompanyName</div>
                                    <div class="addr">@exp.CompanyLocation</div>
                                    <div class="duration">@exp.StartDate - @exp.EndDate</div>
                                </div>
                                <div class="right">
                                    <div class="name">@exp.JobTitle</div>
                                    <div class="desc">@exp.Description</div>
                                    <div class="type">@exp.EmploymentType</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.Educations?.Any() == true)
            {
                <div class="section">
                    <div class="section__title">Education</div>
                    <div class="section__list">
                        @foreach (var edu in Model.Educations)
                        {
                            <div class="section__list-item">
                                <div class="left">
                                    <div class="name">@edu.InstitutionName</div>
                                    <div class="addr">@edu.FieldOfStudy</div>
                                    <div class="duration">@edu.StartDate - @edu.EndDate</div>
                                </div>
                                <div class="right">
                                    <div class="name">@edu.Degree</div>
                                    <div class="desc">@edu.Description</div>
                                    <div class="duration">GPA: @edu.GPA</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.Certificates?.Any() == true)
            {
                <div class="section">
                    <div class="section__title">Certificates</div>
                    <div class="section__list">
                        @foreach (var cert in Model.Certificates)
                        {
                            <div class="section__list-item">
                                <div class="name">@cert.CourseName</div>
                                <div class="desc">@cert.InstitutionName (@cert.CertificateType) | GPA: @cert.GPA</div>
                                <div class="duration">@cert.StartDate - @cert.EndDate</div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.Skills?.Any() == true)
            {
                <div class="section">
                    <div class="section__title">Skills</div>
                    <div class="skills">
                        @foreach (var skill in Model.Skills)
                        {
                            <div class="skills__item">
                                <div class="left">@skill.SkillName</div>
                                <div class="right">@skill.SkillCategory</div>
                                <div class="desc">@skill.SkillDescription</div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.Languages?.Any() == true)
            {
                <div class="section">
                    <div class="section__title">Languages</div>
                    <div class="section__list">
                        @foreach (var lang in Model.Languages)
                        {
                            <div class="section__list-item">
                                <div class="name">@lang.LanguageName</div>
                                <div class="desc">@lang.ProficiencyLevel</div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.Links?.Any() == true)
            {
                <div class="section">
                    <div class="section__title">Links</div>
                    <div class="section__list">
                        @foreach (var link in Model.Links)
                        {
                            <div class="section__list-item">
                                <a href="@link.LinkUrl" target="_blank">@link.LinkName</a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>