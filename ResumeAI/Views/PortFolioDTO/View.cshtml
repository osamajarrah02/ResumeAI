@model ResumeAI.DTOs.PortfolioDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.FirstName @Model.SecondName - Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #0f0f0f;
            color: #fff;
            margin: 0;
        }

        .hero {
            background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
            color: #fff;
            padding: 100px 20px 60px;
            text-align: center;
        }

            .hero h1 {
                font-size: 3rem;
                margin-bottom: 0.5rem;
            }

            .hero p {
                font-size: 1.25rem;
                color: #dcdcdc;
            }

        .section {
            padding: 60px 20px;
        }

            .section h2 {
                font-size: 2rem;
                margin-bottom: 30px;
                position: relative;
                display: inline-block;
            }

                .section h2::after {
                    content: '';
                    display: block;
                    width: 60px;
                    height: 3px;
                    background: #00d8ff;
                    margin-top: 8px;
                    border-radius: 2px;
                }

        .info p {
            font-size: 1rem;
            line-height: 1.8;
        }

        .card-custom {
            background-color: #1c1c1e;
            border-radius: 16px;
            padding: 20px;
            color: #fff;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

            .card-custom:hover {
                transform: translateY(-5px);
            }

        a {
            color: #00d8ff;
        }

        .footer {
            background: #000;
            padding: 30px 0;
            text-align: center;
            font-size: 0.9rem;
            color: #999;
        }
    </style>
</head>
<body>

    <!-- Hero -->
    <div class="hero">
        @if (!string.IsNullOrEmpty(Model.ImageBase64))
        {
            <img src="@Model.ImageBase64" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="Profile Picture" />
        }
        <h1>@Model.FirstName @Model.SecondName @Model.ThirdName</h1>
        <p>@Model.JobTitle</p>
    </div>

    <!-- Contact Info -->
    <div class="section info container">
        <div class="row text-center text-md-start">
            <div class="col-md-4 mb-4">
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
            </div>
            <div class="col-md-8">
                <p><strong>Address:</strong> @Model.Address</p>
                <p><strong>Bio:</strong> @Model.Summary</p>
            </div>
        </div>
    </div>

    <!-- Services -->
    @if (Model.Services?.Any() == true)
    {
        <div class="section container">
            <h2>🛠 Services</h2>
            <div class="row">
                @foreach (var service in Model.Services)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card-custom text-center">
                            @if (service.ServiceImage != null && service.ServiceImage.Length > 0)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(service.ServiceImage)" class="img-fluid mb-3 rounded" style="max-height: 150px;" />
                            }
                            <h5><i class="fas fa-wrench me-2"></i>@service.ServiceName</h5>
                            <p>@service.ServiceDescription</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    }

    <!-- Projects -->
    @if (Model.Projects?.Any() == true)
    {
        <div class="section container">
            <h2>📂 Projects</h2>
            <div class="row">
                @foreach (var project in Model.Projects)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card-custom">
                            <h5><i class="fas fa-folder-open me-2"></i>@project.ProjectName</h5>
                            <p>@project.ProjectDescription</p>
                            @if (!string.IsNullOrWhiteSpace(project.ProjectAttachments))
                            {
                                <p><strong>Attachment:</strong> @project.ProjectAttachments</p>
                            }
                            @if (!string.IsNullOrWhiteSpace(project.ProjectLink))
                            {
                                <p>
                                    <a href="@project.ProjectLink" target="_blank">
                                        <i class="fas fa-external-link-alt"></i> View Project
                                    </a>
                                </p>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Back Button -->
    <div class="text-center my-5">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light px-4 py-2 rounded-pill">
            <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
        </a>
    </div>

    <!-- Footer -->
    <div class="footer">
        &copy; @DateTime.Now.Year @Model.FirstName's Portfolio. All rights reserved.
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
