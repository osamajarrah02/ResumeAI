@model ResumeAI.DTOs.ProfileDTO
@{
    Layout = null;
}

<!Doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Profile</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/HomeCSS/Profile.css" />
    </head>
    <body>
        <div class="container mt-5 pb-5 pt-5">
            <div class="row justify-content-center">
                <div class="col-md-8 profile-card text-center">
                    <form asp-action="UploadProfileImage" method="post" enctype="multipart/form-data" id="imageForm" class="text-center">
                    <div class="mb-3 position-relative d-inline-block">
                        <label for="profileImageInput" style="cursor: pointer;">
                            <input type="file" name="profileImage" id="profileImageInput" accept="image/*" onchange="previewImage()" class="d-none" />
                            <img src="@Model.ImageBase64" alt="Profile Image"
                                 class="rounded-circle shadow border profile-img mb-2"
                                 style="width: 150px; height: 150px; object-fit: cover;" alt="Profile Picture"
                                 onclick="document.getElementById('profileImageInput').click()" style="cursor: pointer;" />
                        </label>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary btn-sm mt-2">
                            <i class="bi bi-upload"></i> Save Image
                        </button>
                        <button class="btn btn-primary btn-sm mt-2">
                            <i class="bi bi-upload"></i> Settings
                        </button>
                    </div>
                    </form>
                    <h2 class="mb-1">@Model.FullName</h2>
                    <p class="text-muted">@Model.Email</p>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a asp-controller="Home" asp-action="Creator" class="btn btn-primary btn-custom">Creator</a>
                    <button class="btn btn-outline-dark btn-custom" onclick="location.href='@Url.Action("Document", "Home")'">My Documents</button>
                    </div>

                    <div id="docList" class="mt-4">
                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <a href="/ResumeDTO/ViewGenerated" class="btn btn-outline-secondary">Resume</a>
                            <a href="/PortFolioDTO/View" class="btn btn-outline-secondary">Portfolio</a>
                            <a href="/CoverLetterDTO/View" class="btn btn-outline-secondary">Cover Letter</a>
                            <a href="/CreateEmailDTO/View" class="btn btn-outline-secondary">Email</a>
                        </div>
                    </div>

                    <div class="row text-center mt-4">
                        <div class="col-md-4">
                            <div class="card counts-card p-3">
                                <h5>Resumes</h5>
                                <h4>@Model.ResumeCount</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card counts-card p-3">
                                <h5>Portfolios</h5>
                                <h4>@Model.PortfolioCount</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card counts-card p-3">
                                <h5>Cover Letters</h5>
                                <h4>@Model.CoverLetterCount</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/js/HomeJS/Profile.js"></script>
    </body>
</html>