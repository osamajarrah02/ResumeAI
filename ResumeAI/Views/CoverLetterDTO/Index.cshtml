@model ResumeAI.DTOs.CoverLetterDTO

<!Doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cover Letter Creator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="container">
            <h1 class="display-4 fw-bold">Create Your Perfect Cover Letter</h1>
            <p class="lead">Professional, easy-to-use, and tailored for success.</p>
            <a asp-controller="CoverLetterDTO" asp-action="Add" class="btn btn-light btn-lg mt-3 shadow">Start Now</a>
        </div>
    </header>
    <section class="py-5">
        <div class="container">
            <h2 class="section-title text-center mb-4">Why Use Our Cover Letter Creator?</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-box h-100">
                        <h5>Smart Templates</h5>
                        <p>Choose from modern and professional templates designed to impress hiring managers.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box h-100">
                        <h5>Instant Preview</h5>
                        <p>See your cover letter update in real-time as you type and personalize your content.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box h-100">
                        <h5>Export or Print</h5>
                        <p>Download your cover letter in PDF or print it directly from your browser.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="bg-light py-5">
        <div class="container">
            <h2 class="section-title text-center mb-4">How It Works</h2>
            <div class="row text-center">
                <div class="col-md-4">
                    <h5>1. Fill Your Info</h5>
                    <p>Enter your personal information, experiences, and job target.</p>
                </div>
                <div class="col-md-4">
                    <h5>2. Customize Content</h5>
                    <p>Use suggestions or write your own text for a unique touch.</p>
                </div>
                <div class="col-md-4">
                    <h5>3. Download & Apply</h5>
                    <p>Preview, print, or export your finished letter instantly.</p>
                </div>
            </div>
        </div>
    </section>
    <section class="py-5">
        <div class="container">
            <h2 class="section-title text-center mb-4">Example Cover Letters</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="example-card">
                        <h6>Junior Developer</h6>
                        <p>"As a recent graduate with a passion for coding and solving real-world problems, I am excited to apply for the Junior Developer position at your company..."</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="example-card">
                        <h6>Marketing Manager</h6>
                        <p>"With 5+ years of digital marketing experience and a drive for data-driven campaigns, I look forward to contributing to your innovative marketing team..."</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>