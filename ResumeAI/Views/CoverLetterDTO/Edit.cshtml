@model ResumeAI.DTOs.CoverLetterDTO

@{
    ViewData["Title"] = "Edit Cover Letter";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CoverLetterCSS/Add.css" />
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
        <div class="row justify-content-center align-items-center w-100" style="min-height: 90vh;">
            <div class="col-lg-10 shadow-lg rounded-4 bg-white d-flex flex-lg-row flex-column p-0">
                <div class="col-12 col-lg-6 d-flex flex-column align-items-center justify-content-center p-5">
                    <div class="w-100" style="max-width: 500px;">
                        <form asp-action="Edit" asp-controller="CoverLetterDTO" method="post">
                            @Html.AntiForgeryToken()
                            <section>
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="SecondName" class="form-label">Second Name</label>
                                    <input asp-for="SecondName" class="form-control" placeholder="Enter your second name" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ThirdName" class="form-label">Third Name</label>
                                    <input asp-for="ThirdName" class="form-control" placeholder="Enter your third name" />
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" placeholder="Your Email Address" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input asp-for="Address" class="form-control" placeholder="Full Address" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="JobTitle" class="form-label">Job Title</label>
                                    <input asp-for="JobTitle" class="form-control" placeholder="Job Title You're Applying For" />
                                </div>
                                <div class="mb-4">
                                    <label asp-for="Summary" class="form-label">Summary</label>
                                    <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Professional Summary"></textarea>
                                </div>
                            </section>

                            <!-- Recipient Info -->
                            <section>
                                <div class="mb-3">
                                    <label asp-for="RecipientFullName" class="form-label">Recipient Name</label>
                                    <input asp-for="RecipientFullName" class="form-control" placeholder="Recipient Full Name" />
                                </div>
                                <div class="mb-4">
                                    <label asp-for="RecipientAddress" class="form-label">Recipient Address</label>
                                    <input asp-for="RecipientAddress" class="form-control" placeholder="Recipient Address" />
                                </div>
                            </section>

                            <!-- Main Content -->
                            <section>
                                <div class="mb-3">
                                    <label asp-for="Introduction" class="form-label">Introduction</label>
                                    <textarea asp-for="Introduction" class="form-control" rows="3" placeholder="Opening Paragraph"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="BodyContent" class="form-label">Body Content</label>
                                    <textarea asp-for="BodyContent" class="form-control" rows="5" placeholder="Skills, Experience, and Motivation"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Closing" class="form-label">Closing</label>
                                    <textarea asp-for="Closing" class="form-control" rows="2" placeholder="Final Statement and Thanks"></textarea>
                                </div>
                                <div class="mb-4">
                                    <label asp-for="SignatureName" class="form-label">Signature</label>
                                    <input asp-for="SignatureName" class="form-control" placeholder="Your Name" />
                                </div>
                            </section>

                            <!-- Experiences -->
                            <section>
                                <h5 class="mb-3 text-primary">Experiences</h5>
                                @for (int i = 0; i < Model.CoverLetterExperiences?.Count; i++)
                                {
                                    <div class="border p-3 rounded mb-3 bg-light">
                                        <div class="row mb-2">
                                            <div class="col-md-4">
                                                <input name="CoverLetterExperiences[@i].JobTitle" class="form-control" value="@Model.CoverLetterExperiences[i].JobTitle" placeholder="Job Title" />
                                            </div>
                                            <div class="col-md-4">
                                                <input name="CoverLetterExperiences[@i].CompanyName" class="form-control" value="@Model.CoverLetterExperiences[i].CompanyName" placeholder="Company" />
                                            </div>
                                            <div class="col-md-4">
                                                <input name="CoverLetterExperiences[@i].CompanyLocation" class="form-control" value="@Model.CoverLetterExperiences[i].CompanyLocation" placeholder="Location" />
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-3">
                                                <input name="CoverLetterExperiences[@i].StartDate" class="form-control" value="@Model.CoverLetterExperiences[i].StartDate" placeholder="Start Date" />
                                            </div>
                                            <div class="col-md-3">
                                                <input name="CoverLetterExperiences[@i].EndDate" class="form-control" value="@Model.CoverLetterExperiences[i].EndDate" placeholder="End Date" />
                                            </div>
                                            <div class="col-md-3">
                                                <input name="CoverLetterExperiences[@i].EmploymentType" class="form-control" value="@Model.CoverLetterExperiences[i].EmploymentType" placeholder="Type" />
                                            </div>
                                        </div>
                                        <textarea name="CoverLetterExperiences[@i].Description" class="form-control" rows="2" placeholder="Role Description">@Model.CoverLetterExperiences[i].Description</textarea>
                                    </div>
                                }
                            </section>

                            <!-- Skills -->
                            <section>
                                <h5 class="mb-3 text-primary">Skills</h5>
                                @for (int i = 0; i < Model.CoverLetterSkills?.Count; i++)
                                {
                                    <div class="border p-3 rounded mb-3 bg-light">
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <input name="CoverLetterSkills[@i].SkillName" class="form-control" value="@Model.CoverLetterSkills[i].SkillName" placeholder="Skill" />
                                            </div>
                                            <div class="col-md-6">
                                                <input name="CoverLetterSkills[@i].SkillCategory" class="form-control" value="@Model.CoverLetterSkills[i].SkillCategory" placeholder="Category" />
                                            </div>
                                        </div>
                                        <textarea name="CoverLetterSkills[@i].SkillDescription" class="form-control" rows="2" placeholder="Details">@Model.CoverLetterSkills[i].SkillDescription</textarea>
                                    </div>
                                }
                            </section>

                            <!-- Languages -->
                            <section>
                                <h5 class="mb-3 text-primary">Languages</h5>
                                @for (int i = 0; i < Model.CoverLetterLanguages?.Count; i++)
                                {
                                    <div class="border p-3 rounded mb-3 bg-light">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <input name="CoverLetterLanguages[@i].LanguageName" class="form-control" value="@Model.CoverLetterLanguages[i].LanguageName" placeholder="Language" />
                                            </div>
                                            <div class="col-md-6">
                                                <input name="CoverLetterLanguages[@i].ProficiencyLevel" class="form-control" value="@Model.CoverLetterLanguages[i].ProficiencyLevel" placeholder="Proficiency" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            </section>

                            <!-- Buttons -->
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-success px-5">Save Changes</button>
                                <a class="btn btn-outline-dark px-5" asp-controller="Home" asp-action="Creator">Return</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/CoverLetterJS/Add.js"></script>
</body>
</html>
