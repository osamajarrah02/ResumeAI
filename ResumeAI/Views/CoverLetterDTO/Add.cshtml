@model ResumeAI.DTOs.CoverLetterDTO

@{
    ViewData["Title"] = "Create Cover Letter";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CoverLetterCSS/Add.css" />
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
        <div class="row justify-content-center align-items-center w-100" style="min-height: 90vh;">
            <div class="col-lg-10 shadow-lg rounded-4 bg-white d-flex flex-lg-row flex-column p-0">
                <div class="col-12 col-lg-6 d-flex flex-column align-items-center justify-content-center p-5">
                    <div class="w-100" style="max-width: 500px;">
                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()
                            <section>
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="SecondName" class="form-label">Second Name</label>
                                    <input asp-for="SecondName" class="form-control" placeholder="Enter your second name" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ThirdName" class="form-label">Third Name</label>
                                    <input asp-for="ThirdName" class="form-control" placeholder="Enter your third name" />
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" placeholder="Your Email Address" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input asp-for="Address" class="form-control" placeholder="Full Address" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="JobTitle" class="form-label">Job Title</label>
                                    <input asp-for="JobTitle" class="form-control" placeholder="Job Title You're Applying For" />
                                </div>
                                <div class="mb-4">
                                    <label asp-for="Summary" class="form-label">Summary</label>
                                    <textarea asp-for="Summary" class="form-control" rows="3" placeholder="Professional Summary"></textarea>
                                </div>
                            </section>
                            <section>
                                <div class="mb-3">
                                    <label asp-for="RecipientFullName" class="form-label">Recipient Name</label>
                                    <input asp-for="RecipientFullName" class="form-control" placeholder="Recipient Full Name" />
                                </div>
                                <div class="mb-4">
                                    <label asp-for="RecipientAddress" class="form-label">Recipient Address</label>
                                    <input asp-for="RecipientAddress" class="form-control" placeholder="Recipient Address" />
                                </div>
                            </section>
                            <section>
                                <div class="mb-3">
                                    <label asp-for="Introduction" class="form-label">Introduction</label>
                                    <textarea asp-for="Introduction" class="form-control" rows="3" placeholder="Opening Paragraph"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="BodyContent" class="form-label">Body Content</label>
                                    <textarea asp-for="BodyContent" class="form-control" rows="5" placeholder="Skills, Experience, and Motivation"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Closing" class="form-label">Closing</label>
                                    <textarea asp-for="Closing" class="form-control" rows="2" placeholder="Final Statement and Thanks"></textarea>
                                </div>
                                <div class="mb-4">
                                    <label asp-for="SignatureName" class="form-label">Signature</label>
                                    <input asp-for="SignatureName" class="form-control" placeholder="Your Name" />
                                </div>
                            </section>
                            <section>
                                <h5 class="mb-3 text-primary">Experiences</h5>
                                <div id="experience-container">
                                    <div class="experience-item border p-3 rounded mb-3 bg-light">
                                        <div class="row mb-2">
                                            <div class="col-md-4">
                                                <input name="CoverLetterExperiences[0].JobTitle" class="form-control" placeholder="Job Title" />
                                            </div>
                                            <div class="col-md-4">
                                                <input name="CoverLetterExperiences[0].CompanyName" class="form-control" placeholder="Company" />
                                            </div>
                                            <div class="col-md-4">
                                                <input name="CoverLetterExperiences[0].CompanyLocation" class="form-control" placeholder="Location" />
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-3">
                                                <input name="CoverLetterExperiences[0].StartDate" class="form-control" placeholder="Start Date" />
                                            </div>
                                            <div class="col-md-3">
                                                <input name="CoverLetterExperiences[0].EndDate" class="form-control" placeholder="End Date" />
                                            </div>
                                            <div class="col-md-3">
                                                <input name="CoverLetterExperiences[0].EmploymentType" class="form-control" placeholder="Type" />
                                            </div>
                                        </div>
                                        <textarea name="CoverLetterExperiences[0].Description" class="form-control" rows="2" placeholder="Role Description"></textarea>
                                    </div>
                                </div>
                                <div class="text-end mb-4">
                                    <button type="button" class="btn btn-outline-primary" onclick="addExperience()">Add Experience</button>
                                </div>
                            </section>
                            <section>
                                <h5 class="mb-3 text-primary">Skills</h5>
                                <div id="skills-container">
                                    <div class="skill-item border p-3 rounded mb-3 bg-light">
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <input name="CoverLetterSkills[0].SkillName" class="form-control" placeholder="Skill" />
                                            </div>
                                            <div class="col-md-6">
                                                <input name="CoverLetterSkills[0].SkillCategory" class="form-control" placeholder="Category" />
                                            </div>
                                        </div>
                                        <textarea name="CoverLetterSkills[0].SkillDescription" class="form-control" rows="2" placeholder="Details"></textarea>
                                    </div>
                                </div>
                                <div class="text-end mb-4">
                                    <button type="button" class="btn btn-outline-primary" onclick="addSkill()">Add Skill</button>
                                </div>
                            </section>
                            <section>
                                <h5 class="mb-3 text-primary">Languages</h5>
                                <div id="language-container">
                                    <div class="language-item border p-3 rounded mb-3 bg-light">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <input name="CoverLetterLanguages[0].LanguageName" class="form-control" placeholder="Language" />
                                            </div>
                                            <div class="col-md-6">
                                                <input name="CoverLetterLanguages[0].ProficiencyLevel" class="form-control" placeholder="Proficiency" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-end mb-4">
                                    <button type="button" class="btn btn-outline-primary" onclick="addLanguage()">Add Language</button>
                                </div>
                            </section>
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-success px-5">Submit</button>
                                <a class="btn btn-outline-dark px-5" asp-controller="Home" asp-action="Creator">Return</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let languageIndex = 1;
        let experienceIndex = 1;
        let skillIndex = 1;

        function addLanguage() {
            const container = document.getElementById("language-container");
            const newItem = document.createElement("div");
            newItem.className = "language-item border p-3 rounded mb-3 bg-light";
            newItem.innerHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <input name="CoverLetterLanguages[${languageIndex}].LanguageName" class="form-control" placeholder="Language" />
                    </div>
                    <div class="col-md-6">
                        <input name="CoverLetterLanguages[${languageIndex}].ProficiencyLevel" class="form-control" placeholder="Proficiency" />
                    </div>
                </div>
                <div class="text-end mt-2">
                    <button type="button" class="btn btn-sm btn-danger" onclick="this.closest('.language-item').remove()">Remove</button>
                </div>`;
            container.appendChild(newItem);
            languageIndex++;
        }

        function addExperience() {
            const container = document.getElementById("experience-container");
            const newItem = document.createElement("div");
            newItem.className = "experience-item border p-3 rounded mb-3 bg-light";
            newItem.innerHTML = `
                <div class="row mb-2">
                    <div class="col-md-4">
                        <input name="CoverLetterExperiences[${experienceIndex}].JobTitle" class="form-control" placeholder="Job Title" />
                    </div>
                    <div class="col-md-4">
                        <input name="CoverLetterExperiences[${experienceIndex}].CompanyName" class="form-control" placeholder="Company" />
                    </div>
                    <div class="col-md-4">
                        <input name="CoverLetterExperiences[${experienceIndex}].CompanyLocation" class="form-control" placeholder="Location" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <input name="CoverLetterExperiences[${experienceIndex}].StartDate" class="form-control" placeholder="Start Date" />
                    </div>
                    <div class="col-md-3">
                        <input name="CoverLetterExperiences[${experienceIndex}].EndDate" class="form-control" placeholder="End Date" />
                    </div>
                    <div class="col-md-3">
                        <input name="CoverLetterExperiences[${experienceIndex}].EmploymentType" class="form-control" placeholder="Type" />
                    </div>
                </div>
                <textarea name="CoverLetterExperiences[${experienceIndex}].Description" class="form-control" rows="2" placeholder="Role Description"></textarea>
                <div class="text-end mt-2">
                    <button type="button" class="btn btn-sm btn-danger" onclick="this.closest('.experience-item').remove()">Remove</button>
                </div>`;
            container.appendChild(newItem);
            experienceIndex++;
        }

        function addSkill() {
            const container = document.getElementById("skills-container");
            const newItem = document.createElement("div");
            newItem.className = "skill-item border p-3 rounded mb-3 bg-light";
            newItem.innerHTML = `
                <div class="row mb-2">
                    <div class="col-md-6">
                        <input name="CoverLetterSkills[${skillIndex}].SkillName" class="form-control" placeholder="Skill" />
                    </div>
                    <div class="col-md-6">
                        <input name="CoverLetterSkills[${skillIndex}].SkillCategory" class="form-control" placeholder="Category" />
                    </div>
                </div>
                <textarea name="CoverLetterSkills[${skillIndex}].SkillDescription" class="form-control" rows="2" placeholder="Details"></textarea>
                <div class="text-end mt-2">
                    <button type="button" class="btn btn-sm btn-danger" onclick="this.closest('.skill-item').remove()">Remove</button>
                </div>`;
            container.appendChild(newItem);
            skillIndex++;
        }
    </script>
</body>
</html>
